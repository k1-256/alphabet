.example-word-check
  margin-top: 20px
  border: 1px solid gray
  border-radius: 5px
  padding: 10px 50px

  display: flex
  flex-flow: column wrap
  align-items: center

  p
    font-size: 21px
    text-align: center
    span.letter
      color: red
      font-size: 42px
  a
    margin: 0 1.5px
    font-size: 42px
    cursor: pointer
    &.checked
      color: green
      cursor: default
  .letters
    position: relative
    display: flex
    align-items: flex-start

    span.message
      position: absolute
      top: 5px
      left: calc(100% + 5px)

      border-radius: 20px
      padding: 2px 10px

      font-size: 14px
      font-weight: 700
      color: #fff
      &.success
        background-color: green
      &.error
        background-color: red
